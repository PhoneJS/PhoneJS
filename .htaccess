# Ativa o mod_rewrite
RewriteEngine On

# Redireciona tudo para index.php, se não for arquivo ou pasta existente
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^ index.php [QSA,L]

# Aumenta limites de upload e execução (valores aproximados para 1TB)
php_value upload_max_filesize 1048576M
php_value post_max_size 1048576M
php_value max_input_time 86400
php_value max_execution_time 86400
php_value memory_limit 16384M